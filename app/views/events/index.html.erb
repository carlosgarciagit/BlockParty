<div class="container">
    <!-- Upcoming Events -->
    <div class="row">
        <div class="col">
            <h2 class="mt-3 mb-3">Upcoming Events</h2>
        </div>
    </div>
    <% @upcoming_events.each do |event| %>
        <% registered = @registered_events.include?(event) %>
        <%= render partial: 'event', locals: { event: event, registered: registered, upcoming: true } %>
    <% end %>
    <!-- Previous Events -->
    <div class="row">
        <div class="col">
            <h2 class="mt-3 mb-3">Previous Events</h2>
        </div>
    </div>
    <% @previous_events.each do |event| %>
        <%= render partial: 'event', locals: { event: event, registered: false, upcoming: false } %>
    <% end %>
</div>
