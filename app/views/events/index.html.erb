<div class="container mb-3">

    <!-- Create new event -->
    <% if @user != nil %>
      <% if @user.admin %>
        <br>
        <%= link_to 'Create New Event', new_event_path, class: 'btn btn-primary mb-3' %>
      <% end %>
    <% end %><br>

    <div class="text-center">
      <div class="searchbar2 mt-5 mb-5">

      <!-- City search -->
      <input type="text" placeholder="Search by event city and state" class="location-fill"></input>

      <!-- From -->
      <input type="text" placeholder="From" class="date-picker min-date"></input>

      <!-- Carot -->
      <svg x="0px" y="0px" preserveAspectRatio="xMidYMid meet" viewBox="0 0 43.5 63.2" style="fill:currentcolor;vertical-align:middle;width:10px;height:10px;" class="icon caret-right" data-reactid="196">
        <g data-reactid="197">
          <path d="M40.7,26L14.8,2.7C13.3,1,11.1,0,8.6,0C3.8,0,0,3.8,0,8.6c0,2.8,1.3,5.3,3.4,6.8L22,32.4L3.4,48.8c-1.4,1.5-2.3,3.6-2.3,5.9 c0,4.7,3.8,8.6,8.6,8.6c2,0,3.8-0.7,5.2-1.8l25.8-22.8c1.7-1.6,2.8-3.8,2.8-6.4S42.4,27.6,40.7,26L40.7,26z" data-reactid="198"></path>
        </g>
      </svg>

      <!-- To -->
      <input type="text" placeholder="To" class="date-picker max-date"></input>

      <!-- Guest number -->
      <select class="guest-select" data-reactid="215">
        <option value="1" data-reactid="216">1 Guest</option>
        <option value="2" data-reactid="217">2 Guests</option>
        <option value="3" data-reactid="218">3 Guests</option>
        <option value="4" data-reactid="219">4 Guests</option>
        <option value="5" data-reactid="220">5 Guests</option>
        <option value="6" data-reactid="221">6 Guests</option>
        <option value="7" data-reactid="222">7 Guests</option>
        <option value="8" data-reactid="223">8 Guests</option>
        <option value="9" data-reactid="224">9 Guests</option>
        <option value="10" data-reactid="225">10 Guests</option>
        <option value="11" data-reactid="226">11 Guests</option>
        <option value="12" data-reactid="227">12 Guests</option>
        <option value="13" data-reactid="228">13 Guests</option>
        <option value="14" data-reactid="229">14 Guests</option>
        <option value="15" data-reactid="230">15 Guests</option>
        <option value="16" data-reactid="231">16 Guests</option>
        <option value="17" data-reactid="232">17 Guests</option>
        <option value="18" data-reactid="233">18 Guests</option>
        <option value="19" data-reactid="234">19 Guests</option>
        <option value="20" data-reactid="235">20+ Guests</option>
      </select>

      <!-- Down carot -->
      <svg x="0px" y="0px" preserveAspectRatio="xMidYMid meet" viewBox="0 0 63.2 43.5" style="fill:currentcolor;vertical-align:middle;width:10px;height:10px;" class="icon caret-down active" data-reactid="237">
        <g data-reactid="238">
          <path d="M37.3,40.7l23.3-25.8c1.7-1.6,2.7-3.8,2.7-6.3c0-4.7-3.8-8.6-8.6-8.6c-2.8,0-5.3,1.3-6.8,3.4L30.9,22L14.5,3.4 c-1.5-1.4-3.6-2.3-5.9-2.3C3.8,1.1,0,4.9,0,9.6c0,2,0.7,3.8,1.8,5.2l22.8,25.8c1.6,1.7,3.8,2.8,6.4,2.8S35.7,42.4,37.3,40.7 L37.3,40.7z" data-reactid="239"></path>
        </g>
      </svg>



      <!-- Submit button -->

      <button class="submit-btn" data-reactid="240" onclick="/events/">
        <svg x="0px" y="0px" preserveAspectRatio="xMidYMid meet" viewBox="0 0 64 64" style="fill:currentcolor;vertical-align:middle;width:26px;height:26px;" class="icon search" data-reactid="241">
          <g data-reactid="242">
            <path d="M62.4,54L46.2,37.7c2.2-3.7,3.6-8.1,3.6-12.9C49.8,11.1,38.6,0,24.9,0S0,11.1,0,24.9s11.1,24.9,24.9,24.9 c4.8,0,9.2-1.3,13-3.6L54,62.4c1.1,0.9,2.4,1.5,4,1.5c3.3,0,6-2.7,6-6C63.9,56.4,63.4,55,62.4,54L62.4,54z M10.2,25 c0-8.2,6.6-14.8,14.8-14.8S39.9,16.8,39.9,25s-6.6,14.8-14.8,14.8C16.9,39.8,10.3,33.2,10.2,25L10.2,25z" data-reactid="243"></path>
          </g>
        </svg>
      </button>


    </div>
    </div>


    <!-- Upcoming Events -->
    <div class="row">
        <div class="col">
            <h2 class="mt-3 mb-3">Upcoming Events</h2>
        </div>
    </div>

    <div class ="row">
      <% @upcoming_events.each do |event| %>
          <% registered = @registered_events.include?(event) %>
          <%= render partial: 'event2', locals: { spaces: @spaces_hash[event.id], event: event, user: @user, registered: registered, upcoming: true } %>
      <% end %>
    </div>

    <!-- Previous Events -->
    <div class="row">
        <div class="col">
            <h2 class="mt-3 mb-3">Previous Events</h2>
        </div>
    </div>

    <dic class="row">
      <% @previous_events.each do |event| %>
          <%= render partial: 'event2', locals: { spaces: @spaces_hash[event.id], event: event, user: @user, registered: false, upcoming: false } %>
      <% end %>
    </div>

</div>
