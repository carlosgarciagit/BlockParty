

<!-- Mission Statement -->
<div class="mt-5 mb-5">
  <div class="text-center" style="margin: auto">
    <img src="<%= image_url('favicon.ico')%>" height="100px;" class="mb-5">
    <h2>The Mission</h2>
    <div style="margin: auto; max-width: 100vh;"><p style="color:gray;">Food insecurity is a huge problem in America. Blockparty curates events to help foodies and their friends have amazing culinary experiences while also fighting food insecurity in their communities</p></div>
  </div>
</div>



<!-- Recent Event Cards -->
<div class="row text-center" style="background-color:#f7f7f7;">
  <div class="col mt-5 mb-5 text-center">
      <h2>Recent Events</h2>
  </div>
</div>

<div class="row" style="background-color:#f7f7f7; padding-left: 30px;padding-right: 30px;">


    <% @previous_events[0..2].each do |event| %>
      <%= render partial: "event_card", locals: {event: event}%>
    <% end %>




  <!-- events button -->
  <div class="container">
    <div class="row">
      <div class="col text-center mb-5" style="margin:auto;">
        <%= link_to "Events Near You", events_path, class: "btn btn-primary"%>
      </div>
    </div>
  </div>

</div>



<!-- the four bullet points -->
<div class="row text-center mt-5 mb-5">

    <!-- point #1 -->
