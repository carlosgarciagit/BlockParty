
<div class="container-fluid">
    <div id="header-image" class="row text-white">
        <div class="col text-center">
            <span style="font-weight:bold;">Combating food insecurity one event at a time</span><br>
            <%= link_to "View Upcoming Events", events_path, class: "btn btn-primary" %>

        </div>
    </div>


    <!-- Modal -->

    <div class="modal fade" id="sign-up-modal" tabindex="-1" role="dialog" aria-labelledby="Sign Up" aria-hidden="true" data-keyboard="true" data-focus="true" data-backdrop="false" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <h5 class="modal-title">Join the Movement</h5>
                    <button type="button" class="close text-muted" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="form-group row">
                            <div class="col">
                                <%= f.text_field :full_name, autofocus: true, class: "form-control form-control-lg", placeholder: 'Name' %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: 'Email' %>
                            </div>
                            <div class="col">
                                <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: "form-control form-control-lg", placeholder: 'Password' %>
                                <% if @minimum_password_length %>
                                    <small id="passwordHelpInline" class="text-muted">
                                        (<%= @minimum_password_length %> characters minimum)
                                    </small>
                                <% end %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <%= f.submit class: "btn btn-primary btn-block" %>
                            </div>
                        </div>
                    <% end %>
                    <div class="row">
                        <div class="col text-center">
                            <p><b>OR</b></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col" id="facebook-signup">
                            <%= link_to(user_facebook_omniauth_authorize_path) do %>
                                <img src="<%= image_path('facebook-signup.png')%>" alt="Continue with Facebook", class="img-fluid">
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%= render partial: "home_contents", locals: {} %>

</div>
