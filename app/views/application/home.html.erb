              </g>
            </svg>



            <!-- Submit button -->
            <button class="submit-btn" data-reactid="240">
              <svg x="0px" y="0px" preserveAspectRatio="xMidYMid meet" viewBox="0 0 64 64" style="fill:currentcolor;vertical-align:middle;width:26px;height:26px;" class="icon search" data-reactid="241">
                <g data-reactid="242">

                  <path d="M62.4,54L46.2,37.7c2.2-3.7,3.6-8.1,3.6-12.9C49.8,11.1,38.6,0,24.9,0S0,11.1,0,24.9s11.1,24.9,24.9,24.9 c4.8,0,9.2-1.3,13-3.6L54,62.4c1.1,0.9,2.4,1.5,4,1.5c3.3,0,6-2.7,6-6C63.9,56.4,63.4,55,62.4,54L62.4,54z M10.2,25 c0-8.2,6.6-14.8,14.8-14.8S39.9,16.8,39.9,25s-6.6,14.8-14.8,14.8C16.9,39.8,10.3,33.2,10.2,25L10.2,25z" data-reactid="243"></path>
                </g>
              </svg>
            </button>


          </div>

        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="sign-up-modal" tabindex="-1" role="dialog" aria-labelledby="Sign Up" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <h5 class="modal-title">Welcome To Blockparty</h5>
                </div>
                <div class="modal-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="form-group row">
                            <div class="col">
                                <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: 'Email' %>
                            </dpaddiniv>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: "form-control form-control-lg", placeholder: 'Password' %>
                                <% if @minimum_password_length %>
                                    <small id="passwordHelpInline" class="text-muted">
                                        (<%= @minimum_password_length %> characters minimum)
                                    </small>
                                <% end %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <%= f.submit class: "btn btn-primary btn-block" %>
                            </div>
                        </div>
                    <% end %>
                    <div class="row">
                        <div class="col text-center">
                            <p><b>OR</b></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col" id="facebook-signup">
                            <%= link_to(user_facebook_omniauth_authorize_path) do %>
                                <img src="<%= image_path('facebook-signup.png')%>" alt="Continue with Facebook", class="img-fluid">
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
