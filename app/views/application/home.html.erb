            <!-- Down carot -->
            <svg x="0px" y="0px" preserveAspectRatio="xMidYMid meet" viewBox="0 0 63.2 43.5" style="fill:currentcolor;vertical-align:middle;width:10px;height:10px;" class="icon caret-down active" data-reactid="237">
              <g data-reactid="238">
