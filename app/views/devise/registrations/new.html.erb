<div class="container">
    <h2>Register</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
            <div class="col">
                <%= devise_error_messages! %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-10">
                <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: 'Email' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-10">
                <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: "form-control form-control-lg", placeholder: 'Password' %>
                <% if @minimum_password_length %>
                    <small id="passwordHelpInline" class="text-muted">
                        (<%= @minimum_password_length %> characters minimum)
                    </small>
                <% end %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-10">
                <%= f.submit class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>

    <div class="row">
        <div class="col">
            <hr/>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
