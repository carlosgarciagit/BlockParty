<div class="container">
    <h2 class="mt-3 mb-3">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
            <div class="col-10">
                <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: 'Email' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-10">
                <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: "form-control form-control-lg", placeholder: 'Password' %>
                <% if @minimum_password_length %>
                    <small id="passwordHelpInline" class="text-muted">
                        (<%= @minimum_password_length %> characters minimum)
                    </small>
                <% end %>
            </div>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="form-group row">
                <div class="col-10">

                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            </div>
        <% end -%>

        <div class="form-group row">
            <div class="col-10">
                <%= f.submit "Sign In", class: "btn btn-primary" %>
            </div>
        </div>

    <% end %>

    <%= render "devise/shared/links" %>
</div>
