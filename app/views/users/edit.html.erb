<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="mt-3 mb-3">Tell us more about yourself</h2>
        </div>
    </div>
    <%= form_for(@user, url: users_path) do |f| %>
        <div class="form-group row">
            <div class="col">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control form-control-lg" %>
            </div>
             <div class="col">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control form-control-lg" %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <%= f.label :interests %>
                <%= f.select :interests, Interest.all.collect {|i| [i.name, i.id]}, {}, { placeholder: "How are you interested in volunteering", multiple: true, class: "chosen-select"} %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-10">
                <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
