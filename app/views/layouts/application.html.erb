<!DOCTYPE html>
<html>
    <head>
        <title>BlockParty</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <%= csrf_meta_tags %>
        <%= favicon_link_tag %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
            <nav class="navbar navbar-toggleable-sm navbar-expand-md navbar-light bg-faded fixed-top">

                <div class="container">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand text-primary text-uppercase" href= "<%= root_path %>" >Block Party <span class="small text-capitalize text-muted">Taking Action Made Easy</span></a>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <%= nav_link "Home", root_path %>
                            <%= nav_link "Events", events_path %>

                            <% if current_user.present? %>
                                <li class="nav-item dropdown <%= current_page?(edit_users_path) ? "active <span class='sr-only'>(current)</span>" : '' %>">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <% if current_user.avatar.file.nil? %>
                                          <img class="rounded-circle img-thumbnail" src="<%= image_url('blank_avatar.png') %>" alt="Profile" width="75" height="75" />
                                        <% else %>
                                          <img class="rounded-circle img-thumbnail" src="<%= current_user.avatar_url %>" alt="Profile" width="75" height="75" />
                                        <% end %>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="<%= edit_users_path %>">Edit</a>
                                        <%= button_to "Log Out", destroy_user_session_path, class: 'dropdown-item', method: :delete %>
                                    </div>
                                </li>
                            <% else %>
                                <li class="nav-item">
                                    <%= nav_link "Log In", new_user_session_path %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                    </div>
            </nav>

            <div class="container-fluid">
                <% if notice.present? %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= notice %>
                    </div>
                <% end %>
                <% if alert.present? %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= alert %>
                    </div>
                <% end %>
            </div>
        <div style="height:66px;">
        </div>
        <%= yield %>
    </body>
</html>
